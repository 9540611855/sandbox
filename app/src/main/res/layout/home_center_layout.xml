<?xml version="1.0" encoding="utf-8"?>
<v.VLinear xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="22dp"
  android:orientation="horizontal">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <v.VImage
      android:id="@+id/image_set_secret"
      android:layout_width="54dp"
      android:layout_height="54dp"
      android:layout_centerHorizontal="true"
      android:background="@drawable/home_icon_bg"
      android:padding="14dp"
      android:scaleType="fitXY"
      android:src="@drawable/home_set_secret" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/image_set_secret"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="11dp"
      android:text="密码设置"
      android:textColor="@color/white_70_opacity"
      android:textSize="12sp" />
  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/rl_change_icon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:visibility="gone">

    <v.VImage
      android:id="@+id/image_change_icon"
      android:layout_width="54dp"
      android:layout_height="54dp"
      android:layout_centerHorizontal="true"
      android:background="@drawable/home_icon_bg"
      android:padding="14dp"
      android:scaleType="fitXY"
      android:src="@drawable/home_change_icon" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/image_change_icon"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="11dp"
      android:text="图标更换"
      android:textColor="@color/white_70_opacity"
      android:textSize="12sp" />
  </RelativeLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <v.VImage
      android:id="@+id/image_rotate_screen"
      android:layout_width="54dp"
      android:layout_height="54dp"
      android:layout_centerHorizontal="true"
      android:background="@drawable/home_icon_bg"
      android:padding="14dp"
      android:scaleType="fitXY"
      android:src="@drawable/home_rotate_screen" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/image_rotate_screen"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="11dp"
      android:text="屏幕翻转"
      android:textColor="@color/white_70_opacity"
      android:textSize="12sp" />
  </RelativeLayout>

  <View
    android:id="@+id/v_empty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:visibility="visible" />
</v.VLinear>