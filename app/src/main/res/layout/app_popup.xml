<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/shape_detail_input"
  android:gravity="center"
  android:orientation="vertical">


  <ImageView
    android:id="@+id/img_close"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_gravity="right"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:src="@drawable/icon_close" />

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="4dp">

    <ImageView
      android:id="@+id/icon"
      android:layout_width="90dp"
      android:layout_height="90dp" />

    <com.othershe.cornerlabelview.CornerLabelView
      android:id="@+id/cornerLabel"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="top|start"
      android:visibility="invisible"
      app:bg_color="@color/primary"
      app:position="left_top"
      app:side_length="22dp"
      app:text="XP"
      app:text_color="@color/white"
      app:text_size="8sp" />
  </FrameLayout>

  <TextView
    android:id="@+id/name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:textColor="@color/white_70_opacity"
    android:textSize="18sp" />

  <TextView
    android:id="@+id/description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:textColor="#AAAAAA"
    android:textSize="14sp"
    tools:text="是否将XX从应用中完全卸载" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:minHeight="60dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/cancel"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:textColor="@color/white_50_opacity"
      android:textSize="18sp"
      tools:text="暂不" />

    <TextView
      android:id="@+id/confirm"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:textColor="@color/color_3EC0AA"
      android:textSize="18sp"
      tools:text="卸载" />

  </LinearLayout>


</LinearLayout>