<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/shape_detail_input"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/img_close"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_gravity="right"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:src="@drawable/icon_close" />

  <v.VLinear
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:layout_marginTop="@dimen/dp_5"
    android:gravity="center"
    android:showDividers="middle">

    <include
      android:id="@+id/ic_default"
      layout="@layout/activity_change_app_icon_popu_item" />

    <include
      android:id="@+id/ic_fake"
      layout="@layout/activity_change_app_icon_popu_item" />

  </v.VLinear>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="25dp"
    android:alpha="0.7"
    android:gravity="top"
    android:text="选择图标"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:textStyle="bold" />


  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:alpha="0.55"
    android:gravity="center_horizontal|top"
    android:text="请选择你想替换的桌面图标"
    android:textColor="@color/white" />

  <v.VButton
    android:id="@+id/btn_change_app_icon"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/shape_color_3ec0aa_24"
    android:gravity="center"
    android:text="确认更换"
    android:textColor="#000000"
    android:textSize="16sp"
    android:textStyle="bold" />
</LinearLayout>