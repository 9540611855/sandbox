<resources>

  <style name="common_button_small">
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">14dp</item>
    <item name="android:fontFamily">PingFangSC-Medium</item>
    <item name="android:gravity">center</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="common_button_medium">
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">16dp</item>
    <item name="android:fontFamily">PingFangSC-Medium</item>
    <item name="android:gravity">center</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="common_button_large">
    <item name="android:layout_height">56dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textSize">16dp</item>
    <item name="android:fontFamily">PingFangSC-Medium</item>
    <item name="android:gravity">center</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="common_button_small_01" parent="common_button_small">
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:textColor">#505050</item>
    <item name="android:background">@drawable/common_button_btn_orange_small</item>
  </style>

  <style name="common_button_small_02_icon_left" parent="common_button_small">
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:drawablePadding">4dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/common_button_btn_orange_small</item>
    <item name="buttonIconLeftSize">@dimen/common_icon_xx_small</item>
  </style>

  <style name="common_button_small_02_icon_right" parent="common_button_small">
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:drawablePadding">4dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/common_button_btn_orange_small</item>
    <item name="buttonIconRightSize">@dimen/common_icon_xx_small</item>
  </style>

  <style name="common_button_small_03" parent="common_button_small">
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:textColor">@color/common_black_01</item>
    <item name="android:background">@drawable/common_button_btn_white_small</item>
  </style>


  <style name="common_button_medium_01" parent="common_button_medium">
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/common_button_btn_medium_black</item>
  </style>

  <style name="common_button_medium_02_icon_left" parent="common_button_medium">
    <item name="android:paddingLeft">20dp</item>
    <item name="android:paddingRight">24dp</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/common_button_btn_medium_black</item>
    <item name="buttonIconLeftSize">@dimen/common_icon_xx_small</item>
  </style>

  <style name="common_button_medium_02_icon_right" parent="common_button_medium">
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">20dp</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/common_button_btn_medium_black</item>
    <item name="buttonIconLeftSize">@dimen/common_icon_xx_small</item>
  </style>

  <style name="common_button_medium_03" parent="common_button_medium">
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
    <item name="android:textColor">@color/common_black_01</item>
    <item name="android:background">@drawable/common_button_btn_white_medium</item>
  </style>


  <style name="common_button_large_01" parent="common_button_large">
    <item name="android:paddingLeft">32dp</item>
    <item name="android:paddingRight">32dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="textSize">20sp</item>
    <item name="android:background">@drawable/common_button_btn_medium_black</item>
  </style>

  <style name="common_button_large_01_white" parent="common_button_large">
    <item name="android:paddingLeft">32dp</item>
    <item name="android:paddingRight">32dp</item>
    <item name="android:textColor">@color/black</item>
    <item name="textSize">20sp</item>
    <item name="android:background">@drawable/common_button_btn_medium_white</item>
  </style>

  <style name="common_button_large_02" parent="common_button_large">
    <item name="android:textColor">@color/white</item>
    <item name="android:drawablePadding">12dp</item>
    <item name="buttonIconLeftSize">@dimen/common_icon_x_small</item>
    <item name="buttonIconRightSize">@dimen/common_icon_x_small</item>
    <item name="buttonIconFollowContentCenter">true</item>
    <item name="android:paddingLeft">32dp</item>
    <item name="android:paddingRight">32dp</item>
    <item name="android:background">@drawable/common_button_btn_orange_large</item>
  </style>

  <style name="common_button_large_03" parent="common_button_large">
    <item name="android:paddingLeft">32dp</item>
    <item name="android:paddingRight">32dp</item>
    <item name="android:drawablePadding">12dp</item>
    <item name="buttonIconLeftSize">@dimen/common_icon_x_small</item>
    <item name="buttonIconRightSize">@dimen/common_icon_x_small</item>
    <item name="android:textColor">@color/common_black_01</item>
    <item name="android:background">@drawable/common_button_btn_white_medium</item>
  </style>

  <style name="common_button_large_03_black" parent="common_button_large">
    <item name="android:paddingLeft">32dp</item>
    <item name="android:paddingRight">32dp</item>
    <item name="android:drawablePadding">12dp</item>
    <item name="buttonIconLeftSize">@dimen/common_icon_x_small</item>
    <item name="buttonIconRightSize">@dimen/common_icon_x_small</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/common_button_btn_medium_black_with_white_stroke
    </item>
  </style>


</resources>
