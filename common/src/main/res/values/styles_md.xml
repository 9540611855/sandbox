<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="MD_Light" parent="android:Theme.Holo.Light.Dialog">
    <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
    <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    <item name="md_divider">@color/md_divider_black</item>
    <item name="md_selector">@drawable/tf_rect_light</item>
    <item name="md_btn_selector">@drawable/tf_rect_rounded_padding_light</item>
    <item name="android:windowAnimationStyle">@style/MD_WindowAnimation</item>
    <item name="android:backgroundDimAmount">@dimen/common_dialog_background_dim_amount
    </item>
    <item name="md_title_color">@color/common_grey_01</item>
    <item name="md_subtitle_color">@color/common_grey_02</item>
    <item name="md_content_color">@color/common_grey_02</item>
    <item name="md_accent_color">@color/purple</item>
  </style>

  <style name="MD_Dark" parent="android:Theme.Holo.Dialog">
    <item name="md_divider">@color/md_divider_white</item>
    <item name="md_selector">@drawable/tf_rect_dark</item>
    <item name="md_btn_selector">@drawable/tf_rect_rounded_padding_dark</item>
    <item name="android:windowAnimationStyle">@style/MD_WindowAnimation</item>
    <item name="android:backgroundDimAmount">@dimen/common_dialog_background_dim_amount
    </item>
    <item name="md_accent_color">@color/purple</item>
    <item name="md_subtitle_color">@color/common_grey_02</item>
    <item name="md_item_color">@color/common_grey_01</item>
  </style>


  <style name="MD_ActionButtonStacked" parent="@style/MD_ActionButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
  </style>

  <style name="MD_ActionButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/md_button_height</item>
    <item name="android:text">@android:string/ok</item>
    <item name="android:enabled">true</item>
    <item name="android:layout_gravity">end|center_vertical</item>
  </style>

  <style name="MD_ActionButton.Text">
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">@dimen/md_button_textsize</item>
    <item name="android:singleLine">true</item>
    <item name="typeface">medium</item>
    <item name="android:layout_gravity">end|center_vertical</item>
    <item name="android:gravity">center</item>
    <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    <item name="android:enabled">true</item>
    <item name="android:background">@null</item>
    <item name="android:minWidth">@dimen/md_button_min_width</item>
    <item name="android:paddingLeft">@dimen/md_button_textpadding_horizontal</item>
    <item name="android:paddingRight">@dimen/md_button_textpadding_horizontal</item>
    <item name="android:duplicateParentState">true</item>
  </style>

  <!-- Light dialog theme for devices prior Honeycomb -->
  <style name="Theme_Light_Dialog" parent="android:Theme.Light">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
  </style>


  <style name="DialogFlowAnimation">
    <item name="android:windowEnterAnimation">@anim/dialog_flow_slide_in_right</item>
    <item name="android:windowExitAnimation">@anim/dialog_flow_slide_out_left</item>
  </style>

  <style name="DialogFlowAnimationReversed">
    <item name="android:windowEnterAnimation">@anim/dialog_flow_slide_in_left</item>
    <item name="android:windowExitAnimation">@anim/dialog_flow_slide_out_right</item>
  </style>

  <style name="DialogAnimationNoEnter" parent="Animation.AppCompat.Dialog">
    <item name="android:windowEnterAnimation">@anim/dialog_no_enter</item>
  </style>

  <style name="MD_WindowAnimation">
    <item name="android:windowEnterAnimation">@anim/popup_enter_material</item>
    <item name="android:windowExitAnimation">@anim/popup_exit_material</item>
  </style>


</resources>